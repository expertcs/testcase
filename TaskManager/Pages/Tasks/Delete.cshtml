@page
@model TaskManager.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Task.Id" />
            <input type="hidden" asp-for="Task.Name" />
            <div class="form-group mb-3">                
                <label asp-for="Task.Name" class="control-label">Delete task</label>
                <label>@Model.Task.Name</label>
                ?
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}